<div class="product-card">
    <div class="product-image">
        <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
        <div class="time-left">00:12:45</div>
    </div>
    <div class="product-info">
        <h3 class="product-title"><%= product.name %></h3>
        <p class="product-description"><%= product.description %></p>
        <div class="product-meta">
            <div class="current-bid">
                <span class="label">Oferta actual:</span>
                <span class="value">$<%= product.currentBid %></span>
            </div>
            <div class="bids-count">
                <span class="label">Ofertas:</span>
                <span class="value"><%= product.bidCount %></span>
            </div>
        </div>
        <button class="bid-button">Pujar ahora</button>
    </div>
</div>